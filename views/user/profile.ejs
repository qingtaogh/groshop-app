<%- include('../partials/header.ejs') %>
<body>
<%- include('../partials/navbar-user.ejs') %>
<script type="text/javascript">
    function onDelete(id) {
        if (confirm("Are you sure you want to delete this address?")) {
            document.getElementById("deleteAddressForm").submit();
        }
    }
</script>
<div id = "user-profile-view">
   <div class="container justify-content-center">
    <h1>My Profile Page</h1>
    <%- include('../partials/alerts.ejs') %>
    <% if(user) { %>
        <h3>Profile Details</h3>
        <div class="card" id="user-profile-card">
            <div class="dropdown text-end">
                <a class="icon-dropdown" href="#" id="dropdownMenuLink-me" data-bs-toggle="dropdown" aria-expanded="false">
                  <i class="fa-solid fa-gear icon-dropdown" data-mdb-toggle="tooltip" title="Manage User"></i>
                </a>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink-me">
                      <li><a class="dropdown-item" href="/home/profile/<%=user.id%>/update" >Update Profile</a></li>
                      <li><a class="dropdown-item" href="/home/profile/<%=user.id%>/changePassword" >Change Password</a></li>
                </ul>
            </div>
            <table style="width: 100%">
                <colgroup>
                    <col span="1" style="width: 20%;">
                    <col span="1" style="width: 10%;">
                    <col span="1" style="width: 70%;">
                 </colgroup>
                <tbody>
                    <tr>
                        <td>Username</td>
                        <td>:</td>
                        <td id="username"><%=user.username%></td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td>:</td>
                        <td id="email"><%=user.email%></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <br>
        <h3>Shipping Address</h3>
        <% if (address) { %>
            <div class="card" id="user-profile-address-card">
                <span class="text-end">
                    <a id="updateAddress" href="/home/address/<%=address.id%>/update"><i class="fa-solid fa-pen" data-toggle="tooltip" data-placement="top" title="Update Address"></i></a>
                    &nbsp;
                    <a id="deleteAddress" href="#" onclick='onDelete(<%=address.id%>)' ><i class="fa-solid fa-trash-can" data-toggle="tooltip" data-placement="top" title="Delete Address"></i></a>
                </span>
                <table style="width: 100%">
                    <colgroup>
                        <col span="1" style="width: 20%;">
                        <col span="1" style="width: 10%;">
                        <col span="1" style="width: 70%;">
                    </colgroup>
                    <tbody> 
                        <tr>
                            <td>Street / Building Name</td>
                            <td>:</td>
                            <td id="addressName"><%=address.name%></td>
                        </tr>
                        
                        <tr>
                            <td>Floor No</td>
                            <td>:</td>
                            <td id="addressFloorNo"><%=address.floorNo%></td>
                        </tr>
                        
                        <tr>
                            <td>Unit No</td>
                            <td>:</td>
                            <td id="addressUnitNo"><%=address.unitNo%></td>
                        </tr>
                        
                        <tr>
                            <td>Postal Code</td>
                            <td>:</td>
                            <td id="addressPostalCode"><%=address.postalCode%></td>
                        </tr>
                        <tr>
                            <td>Country</td>
                            <td>:</td>
                            <td id="addressPostalCode"><%=address.country%></td>
                        </tr>
                    </tbody>
                </table>
                <br>
                <form hidden id="deleteAddressForm" action="/home/address/<%=address.id%>/delete" method="POST"></form> 
            </div>
        <% } else { %>
        <a id ="createAddress" href="/home/address/create" class="btn btn-primary" ><i class="fa-solid fa-circle-plus"></i>&nbsp;Add Address</a>
        <% } %>
    </div>
    <% } %>
</div>


</body>
<%- include('../partials/footer.ejs') %>