<%- include('partials/header.ejs') %>
<body>
<%- include('partials/navbar.ejs') %>
<div id = "welcome-view" class="d-flex align-items-center justify-content-center">
    <div id="welcome-card" class="card w-50 mx-auto my-auto">
        <br>
        <div class="row justify-content-md-center mb-3">
            <h1 class="card-title text-center" style="color:rgb(0, 16, 87); font-weight:bold">
                Welcome to GroShop!
            </h1>
        </div>
        <div class="row justify-content-md-center">
            <div class="col-md-8 col-md-offset-2">
                <div id="login-contents">
                    <%- include('partials/alerts.ejs') %>
                    <form action="/login" method="post">
                        <div class="form-group mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" name="email" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" name="password" required>
                        </div>
                        <br>
                        <button class="btn btn-primary" type="submit">Log In</button>
                    </form>
                    <br>
                    <p>Need an account? <a href='/register' class="link-primary">Sign Up</a> </p>
                </div>
            </div>
            <!-- <br> -->
        </div>
    </div>
</div>
</body>

<%- include('partials/footer.ejs') %>
